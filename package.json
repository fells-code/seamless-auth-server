{
  "name": "@seamless-auth/server",
  "version": "0.0.1-beta.0",
  "description": "The server side package for seamless auth that can be used server side to validate and implement auth.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens.js",
      "require": "./dist/tokens.js",
      "types": "./dist/tokens.d.ts"
    },
    "./nextjs": {
      "import": "./dist/nextjs.js",
      "require": "./dist/nextjs.js",
      "types": "./dist/nextjs.d.ts"
    },
    "./refresh": {
      "import": "./dist/refresh.js",
      "require": "./dist/refresh.js",
      "types": "./dist/refresh.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.js",
      "require": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    }
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "jose": "^5.2.0"
  },
  "homepage": "https://github.com/fells-code/seamless-auth-server#readme",
  "bugs": {
    "url": "https://github.com/fells-code/seamless-auth-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fells-code/seamless-auth-server.git"
  },
  "license": "MIT",
  "author": "Brandon Corbett <brandon.corbett@fellscode.com>",
  "type": "module",
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^24.0.6",
    "rimraf": "^6.0.1"
  }
}
